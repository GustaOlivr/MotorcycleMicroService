{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:8081"
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/motorcycles",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "motorcycle-service",
          "Port": 8082
        }
      ],
      "UpstreamPathTemplate": "/gateway/motorcycles",
      "UpstreamHttpMethod": [ "GET" ],
      "HttpHandlerOptions": {
        "AllowAutoRedirect": false,
        "UseCookieContainer": false,
        "UseProxy": false,
        "DangerousAcceptAnyServerCertificateValidator": true
      }
    }
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Ocelot": "Debug"
    }
  }
}
